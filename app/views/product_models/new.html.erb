<h1>Cadastrar Modelo de Produto</h1>

<%= form_with(model: ProductModel.new) do |f| %>
  <div>
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name %>
  </div>
  
  <div>
    <%= f.label :weight, 'Peso' %>
    <%= f.text_field :weight %>
  </div>
  
  <div>
    <%= f.label :height, 'Altura' %>
    <%= f.text_field :height %>
  </div>
  
  <div>
    <%= f.label :width, 'Largura' %>
    <%= f.text_field :width %>
  </div>
  
  <div>
    <%= f.label :length, 'Profundidade' %>
    <%= f.text_field :length %>
  </div>
  
  <div>
    <%= f.label :sku, 'CÃ³digo SKU' %>
    <%= f.text_field :sku %>
  </div>
  
  <div>
    <%= f.label :supplier_id, 'Fornecedor' %>
    <%= f.collection_select(:supplier_id, Supplier.all, :id, :fantasy_name) %>
  </div>

  <div>
    <%= f.label :category_id, 'Categoria' %>
    <%= f.collection_select(:category_id, Category.all, :id, :name) %>
  </div>

  <%= f.submit 'Gravar' %>
<% end %>
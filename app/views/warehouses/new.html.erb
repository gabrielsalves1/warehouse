<% if @warehouse.errors %>
  <div class="alert alert-danger">
    <span>Verifique os campos abaixo:</span>
    <ul>
      <% @warehouse.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @warehouse) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :code %>
    <%= form.text_field :code, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :city %>
    <%= form.text_field :city, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :state %>
    <%= form.text_field :state, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :postal_code %>
    <%= form.text_field :postal_code, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :total_area %>
    <%= form.text_field :total_area, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :useful_area %>
    <%= form.text_field :useful_area, class: "form-control" %>
  </div>

  <div class="form-group form-check">
    <%= form.label 'Escolha as categorias', class: 'form-check-label' %>
    <%= form.collection_check_boxes :category_ids, Category.all, :id, :name, class: 'form-check-input'%>
  </div>
  <%= form.submit 'Gravar', class: 'btn btn-primary' %>
<% end %>
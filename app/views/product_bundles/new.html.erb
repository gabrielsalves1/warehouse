<h1>Novo kit de Produtos</h1>

<% if @product_bundle.errors %>
  <div class="alert alert-danger">
    <span>Verifique os campos abaixo:</span>
    <ul>
      <% @product_bundle.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @product_bundle) do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :sku, 'CÃ³digo SKU' %>
    <%= f.text_field :sku, class: "form-control" %>
  </div>

  <div class="form-group form-check">
    <%= f.label 'Escolha os produtos', class: 'form-check-label' %>
    <%= f.collection_check_boxes :product_model_ids, ProductModel.all, :id, :name, class: 'form-check-input'%>
  </div>

  <%= f.submit 'Gravar', class: 'btn btn-primary' %>
<% end %>
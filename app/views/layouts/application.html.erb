<!DOCTYPE html>
<html>
  <head>
    <title>WarehouseApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <%= link_to 'Início', root_path %>
        <%= link_to 'Fornecedores', suppliers_path %>
        <%= link_to 'Categorias', categories_path %>

        <% if user_signed_in? %>
          <%= link_to 'Cadastrar novo galpão', new_warehouse_path %>
          <%= link_to 'Cadastrar novo fornecedor', new_supplier_path %>
          <%= link_to 'Criar novo kit de produtos', new_product_bundle_path %>
          <%= link_to 'Cadastrar modelo de produto', new_product_model_path %>
          <%= link_to 'Cadastrar categoria', new_category_path %>
          <%= link_to 'Sair', destroy_user_session_path, method: :delete %>
          Olá, <%= current_user.email %>
        <% else %>
          <%= link_to 'Entrar', new_user_session_path %>
        <% end %>
      </nav>
    </header>
    <main>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
      <%= yield %>
    </main>
  </body>
</html>

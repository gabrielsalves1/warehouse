<h1>Novo Fornecedor</h1>

<% if @supplier.errors %>
  <div class="alert alert-danger">
    <span>Verifique os campos abaixo:</span>
    <ul>
      <% @supplier.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @supplier) do |form| %>
  <div class="form-group">
    <%= form.label :fantasy_name, 'Nome Fantasia' %>
    <%= form.text_field(:fantasy_name, class: "form-control") %>
  <div>

  <div class="form-group">
    <%= form.label :legal_name, 'RazÃ£o Social' %>
    <%= form.text_field(:legal_name, class: "form-control") %>
  <div>

  <div class="form-group">
    <%= form.label :cnpj, 'CNPJ' %>
    <%= form.number_field(:cnpj, class: "form-control") %>
  <div>

  <div class="form-group">
    <%= form.label :email, 'E-mail' %>
    <%= form.text_field(:email, class: "form-control") %>
  <div>

  <div class="form-group">
    <%= form.label :product, 'Produto'%>
    <%= form.text_field(:product, class: "form-control") %>
  <div>

  <div class="form-group">
    <%= form.label :telephone, 'Telefone'%>
    <%= form.text_field(:telephone, class: "form-control") %>
  <div>

  <%= form.submit 'Gravar', class: 'btn btn-primary' %>
<% end %>